# Application
PORT=3000
NODE_ENV=development
HOST="0.0.0.0"
API_PREFIX="/api"
SWAGGER_PATH="/docs"
APP_NAME="Fashion Tinder"
APP_DESCRIPTION="A Tinder-like app for fashion discovery"
APP_VERSION="1.0.0"

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/fashion_tinder?schema=public"
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="fashion_tinder"
DB_USER="postgres"
DB_PASSWORD="postgres"

# Authentication
JWT_SECRET="change_me_in_production"
JWT_EXPIRATION="7d"
JWT_REFRESH_SECRET="change_me_in_production"
JWT_REFRESH_EXPIRATION="30d"

# Redis Cache & Rate Limiting
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
THROTTLE_TTL=60
THROTTLE_LIMIT=100
CACHE_TTL="1h"

# AWS S3 & CloudFront
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
S3_BUCKET="fashion-tinder-uploads"
CLOUDFRONT_URL="https://d123xyz.cloudfront.net"
MAX_FILE_SIZE="5" # In MB

# Email Service (planned)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
FROM_EMAIL="noreply@fashion-tinder.com"

# Monitoring & Logging
SENTRY_DSN=""
LOG_LEVEL="info"
ENABLE_API_LOGGING="true"
ENABLE_REQUEST_LOGGING="true"

# Feature Flags
ENABLE_SWAGGER="true"
ENABLE_COMPRESSION="true"
ENABLE_SECURITY_MIDDLEWARE="true"
MAINTENANCE_MODE="false"